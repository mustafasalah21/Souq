@model IEnumerable<Souq.Models.Product>

<link rel="stylesheet" href="https://cdn.datatables.net/2.3.6/css/dataTables.dataTables.css">

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.datatables.net/2.3.6/js/dataTables.js"></script>

<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">

    <h1 class="text-center">Index</h1>

    <p class="text-end">
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

    <table class="table table-striped table-bordered" id="myTable">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Describtion)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th>@Html.DisplayNameFor(model => model.Photo)</th>
                <th>@Html.DisplayNameFor(model => model.SuplierName)</th>
                <th>@Html.DisplayNameFor(model => model.Date)</th>
                <th>@Html.DisplayNameFor(model => model.Url)</th>
                <th>@Html.DisplayNameFor(model => model.Cat)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Describtion</td>
                    <td>@item.Price</td>
                    <td>@item.Photo</td>
                    <td>@item.SuplierName</td>
                    <td>@item.Date</td>
                    <td>@item.Url</td>
                    <td>@item.Cat.Id</td>
                    <td style="block-size:auto">
                        <a asp-action="Edit" class="btn btn-warning btn-sm" asp-route-id="@item.Id">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Details" class="btn btn-success btn-sm" asp-route-id="@item.Id">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.Id">
                            <i class="bi bi-x-square"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
