@model List<Order>

@{
    ViewData["Title"] = "Orders";
}

<div class="container py-4">

    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="mb-0">My Orders</h2>
        <span class="text-muted">Total: @(Model?.Count ?? 0)</span>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            No orders found.
        </div>
    }
    else
    {
        foreach (var order in Model)
        {
            <div class="card shadow-sm mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <strong>Order #@order.Id</strong>
                    </div>
                    <div class="text-muted small">
                        @* إذا عندك تاريخ بالـ Order استخدمه هنا *@
                        @* @order.CreatedAt *@
                    </div>
                </div>

                <div class="card-body">
                    <div class="mb-3">
                        <div class="fw-semibold">Address</div>
                        <div class="text-muted">@order.Address</div>
                    </div>

                    @{
                        var details = order.OrderDetiles?.ToList() ?? new List<OrderDetile>();
                        var orderTotal = details.Sum(d => (decimal?)d.TotelPrice ?? 0m);
                    }




                    @if (!details.Any())
                    {
                        <div class="alert alert-warning mb-0">
                            This order has no items.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Product</th>
                                        <th class="text-end" style="width:140px;">Price</th>
                                        <th class="text-end" style="width:160px;">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var d in details)
                                    {
                                        <tr>
                                            <td>@(d.Product?.Name ?? "-")</td>
                                            <td class="text-end">@d.Price</td>
                                            <td class="text-end">@d.TotelPrice</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th class="text-end" colspan="2">Order Total</th>
                                        <th class="text-end">@orderTotal</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                </div>
            </div>
        }
    }
</div>
