@model IEnumerable<Souq.Models.Category>

<section id="services" class="services section mt-5">

    <div class="container section-title text-center" data-aos="fade-up">
        <h2>Site Sections</h2>
        <p class="text-muted mb-0">Choose a category to browse products.</p>
    </div>

    <div class="container">
        <div class="row g-4">
            @foreach (var cat in Model)
            {
                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
                    <a href="/Home/Proudects/@cat.Id" class="text-decoration-none">
                        <div class="cat-card p-3 p-sm-4 h-100 d-flex align-items-center gap-3">

                            <!-- Icon / Image -->
                            <div class="cat-icon flex-shrink-0">
                                @if (!string.IsNullOrWhiteSpace(cat.Photo) && cat.Photo.StartsWith("bi-"))
                                {
                                    <i class="bi @cat.Photo"></i>
                                }
                                else if (!string.IsNullOrWhiteSpace(cat.Photo) &&
                                (cat.Photo.StartsWith("/") || cat.Photo.StartsWith("http")))
                                {
                                    <img src="@cat.Photo" alt="@cat.Name" />
                                }
                                else
                                {
                                    <i class="bi bi-grid"></i>
                                }
                            </div>

                            <!-- Text -->
                            <div class="flex-grow-1">
                                <h5 class="cat-title mb-1">@cat.Name</h5>
                                <p class="cat-desc mb-0">
                                    @(string.IsNullOrWhiteSpace(cat.Descrption) ? "Browse products in this category." : cat.Descrption)
                                </p>
                            </div>

                            <!-- Arrow -->
                            <div class="cat-arrow flex-shrink-0">
                                <i class="bi bi-arrow-right"></i>
                            </div>

                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>

<style>
    /* بطاقة مميزة (Glass + Border) */
    .cat-card {
        border-radius: 16px;
        border: 1px solid rgba(0,0,0,.08);
        background: rgba(255,255,255,.75);
        backdrop-filter: blur(6px);
        box-shadow: 0 10px 25px rgba(0,0,0,.06);
        transition: transform .25s ease, box-shadow .25s ease, border-color .25s ease;
        color: inherit;
        position: relative;
        overflow: hidden;
    }

        /* لمعة خفيفة */
        .cat-card::before {
            content: "";
            position: absolute;
            inset: -60px;
            background: radial-gradient(circle at 20% 10%, rgba(13,110,253,.10), transparent 45%), radial-gradient(circle at 80% 80%, rgba(25,135,84,.10), transparent 45%);
            opacity: .9;
            pointer-events: none;
            transition: opacity .25s ease;
        }

        .cat-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 18px 40px rgba(0,0,0,.10);
            border-color: rgba(13,110,253,.22);
        }

    .cat-icon {
        width: 56px;
        height: 56px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(13,110,253,.10);
        border: 1px solid rgba(13,110,253,.15);
    }

        .cat-icon i {
            font-size: 28px;
            line-height: 1;
        }

        .cat-icon img {
            width: 34px;
            height: 34px;
            object-fit: contain;
        }

    .cat-title {
        font-weight: 800;
        color: var(--brand);
    }

    .cat-desc {
        color: rgba(0,0,0,.60);
        font-size: .92rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .cat-arrow {
        width: 38px;
        height: 38px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(0,0,0,.04);
        transition: transform .25s ease, background .25s ease;
        color: rgba(0,0,0,.55);
    }

    .cat-card:hover .cat-arrow {
        transform: translateX(4px);
        background: rgba(13,110,253,.12);
        color: rgba(13,110,253,.9);
    }
</style>
