@model List<Souq.Models.Product>

<section id="services" class="services section">

    <!-- Section Title -->
    <div class="container section-title text-center" data-aos="fade-up">
        <h2 class="mb-2">Product Sections</h2>
        <p class="text-muted">
            We offer the best services that meet your needs, and your orders will be delivered wherever you are.
        </p>
    </div>

    <div class="container">
        <div class="row gy-4">

            @foreach (var item in Model)
            {
                <div class="col-xl-4 col-lg-6 col-md-6" data-aos="fade-up" data-aos-delay="100">

                    <div class="card h-100 shadow-sm border-0 service-card">

                        <!-- Image -->
                        <div class="position-relative overflow-hidden">
                            <img src="@item.Photo"
                                 class="card-img-top"
                                 style="height:230px; object-fit:cover;"
                                 alt="@item.Name" />

                            <!-- Overlay -->
                            <div class="overlay d-flex flex-column align-items-center justify-content-center gap-2">
                                <a href="/Home/CuranntProduct/@item.Id" class="btn btn-light btn-sm">
                                    <i class="bi bi-eye me-1"></i> View
                                </a>

                                <!-- ✅ Add to Cart -->
                                <a href="/Home/AddProductToCart/@item.Id" class="btn btn-warning btn-sm fw-semibold">
                                    <i class="bi bi-cart-plus me-1"></i> Add to Cart
                                </a>
                            </div>
                        </div>

                        <!-- Content -->
                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold">@item.Name</h5>
                            <p class="card-text text-muted small">
                                @item.Describtion
                            </p>
                        </div>

                    </div>

                </div>
            }

        </div>
    </div>

</section>

<style>
    .service-card {
        transition: all 0.3s ease;
        border-radius: 12px;
        overflow: hidden;
    }

        .service-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.12);
        }

        .service-card .overlay {
            position: absolute;
            inset: 0;
            background: rgba(0, 0, 0, 0.55);
            opacity: 0;
            transition: all 0.3s ease;
        }

        .service-card:hover .overlay {
            opacity: 1;
        }

        .service-card img {
            transition: transform 0.4s ease;
        }

        .service-card:hover img {
            transform: scale(1.05);
        }
</style>
